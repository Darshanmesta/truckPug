doctype html
html
    head
        title="New Pug Page"
        link(href="https://bootswatch.com/3/paper/bootstrap.min.css",type="text/css",rel="stylesheet")
        meta(name="viewport",content="width=device-width,initial-scale=-1")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")

    body
        nav.navbar.navbar-default
            .container
                div(class="navbar-header")
                    a(href="/" class='navbar-brand') Home
                    button(class="navbar-toggle" data-toggle="collapse" data-target="#myDiv")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div(class='navbar-collapse collapse' id="myDiv")
                    ul.nav.navbar-nav
                        li
                            a(href="/") Products
                        li
                            a(href="/create") Create

        .container
            .row
                .col-xs-12
                    h2.jumbotron.text-center Welcome to This Page

        .container
            .row
             for x in posts
                .col-md-6.well
                    div(class="panel panel-info")     
                        div(class='panel-heading')      
                            div(class='panel-title')  
                                a(href="" )=x['name'] 
                            
                        
                        div(class="panel-body")
                            ul.list-group
                                li.list-group-item.text-center Truck Image:
                                    
                                    img(src=x['image'],class="img-responsive text-center", style="margin:auto;")
                                li.list-group-item Truck Manufacturer:
                                    p=x['truckmodel']
                            ul.list-group Owner Information:
                                li.list-group-item Name:
                                    p=x['name']
                                li.list-group-item Email
                                    p=x['email']
                                li.list-group-item Phone:
                                    p=x['select']+x['phone']
                                li.list-group-item Comments:
                                    p=x['desc']



                           
                           
                           

                               
                                
                        div(class='panel-footer')
                             a(href="/edit/"+x['_id'] class="glyphicon glyphicon-edit text-info")
                             a(href="/delete/"+x['_id'] class="glyphicon glyphicon-trash text-danger pull-right")            

                                        